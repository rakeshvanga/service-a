    "version": "0.2.0",
    "configurations": [
        // Local launch settings
        {
            "name": "Attach to Process",
            "type": "node",
            "request": "attach",
            "port": 9229,
            "restart": true
        },
        // Docker launch settings
        {
            "name": "docker: Attach to Process",
            "type": "node",
            "request": "attach",
            "port": 9229,
            "localRoot": "${workspaceFolder}",
            "remoteRoot": "/app",
            "restart": true
        },
        // Mindaro launch settings
        {
            "name": "mindaro: Attach to Process",
            "type": "node",
            "request": "attach",
            "port": 9229,
            "localRoot": "${workspaceFolder}",
            "remoteRoot": "/app",
            "restart": true
        }
    ]
}