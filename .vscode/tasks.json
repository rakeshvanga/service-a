{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        // Local tasks
        {
            // Supports attach/detach debugging model
            "type": "npm",
            "script": "develop",
            "problemMatcher": [],
            "isBackground": true
        },
        // Docker tasks
        {
            "label": "docker: rm",
            "type": "shell",
            "command": "docker",
            "osx": {
                "args": [
                    "rm",
                    "-f",
                    "service-a",
                    "||",
                    "echo",
                    "-n"
                ]
            },
            "windows": {
                "args": [
                    "rm",
                    "-f",
                    "service-a",
                    "|",
                    "echo",
                    ".>nul"
                ]
            },
            "problemMatcher": []
        },
        {
            "label": "docker: build",
            "dependsOn": "docker: rm",
            "type": "process",
            "command": "docker",
            "args": [
                "build",
                "-t",
                "service-a",
                "."
            ],
            "problemMatcher": []
        },
        // Mindaro tasks
        {
            // This is eventually done automatically by the extension
            "label": "mindaro: up",
            "type": "process",
            "command": "mindaro",
            "args": [
                "up",
                "--daemon"
            ],
            "problemMatcher": [],
            "isBackground": true
        },
        {
            // Supports attach/detach debugging model
            "label": "npm: develop (mindaro)",
            "type": "process",
            "command": "mindaro",
            "args": [
                "exec",
                "-p",
                "34839:9229",
                "npm",
                "run",
                "develop",
                "--",
                "--inspect=0.0.0.0:9229"
            ],
            "problemMatcher": [],
            "isBackground": true
        }
    ]
}